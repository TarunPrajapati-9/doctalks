generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Doctor {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  d_name           String         @unique
  d_email          String         @unique
  d_password       String
  d_certificate    Bytes
  d_rating         Float          @default(0)
  d_specialization Specialization

  Listing Listing[]
  Session Session[]
}

model User {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  u_name     String @unique
  u_email    String @unique
  u_password String

  Session Session[]
}

model Chat {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  chat_title String
  bot_type   Specialization

  Message Message[]
}

model Message {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  is_bot  Boolean
  text    String
  Chat    Chat    @relation(fields: [chat_id], references: [id])
  chat_id String  @db.ObjectId
}

model Listing {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  price        Float
  doctor_id    String @db.ObjectId
  avg_duration Float
  description  String

  doctor Doctor @relation(fields: [doctor_id], references: [id])
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  tile      DateTime @default(now())
  user_id   String   @db.ObjectId
  doctor_id String   @db.ObjectId

  user   User   @relation(fields: [user_id], references: [id])
  doctor Doctor @relation(fields: [doctor_id], references: [id])
}

enum Specialization {
  CARDIOLOGY
  DERMATOLOGY
  ENDOCRINOLOGY
  GASTROENTEROLOGY
  GYNECOLOGY
  HEMATOLOGY
  INFECTIOUS_DISEASE
  NEPHROLOGY
  NEUROLOGY
  OBSTETRICS
  ONCOLOGY
  OPHTHALMOLOGY
  ORTHOPEDICS
  OTOLARYNGOLOGY
  PEDIATRICS
  PSYCHIATRY
  PULMONOLOGY
  RHEUMATOLOGY
  THERAPY
  UROLOGY
  PHYSIOLOGY
}
